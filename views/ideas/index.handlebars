{{#each ideas}}
  <div class="card card-body mb-3">
    <h3>{{title}}</h3>
    <p>{{details}}</p>
    <a href="/ideas/edit/{{id}}" class="btn btn-block btn-sm btn-dark mb-2">Edit</a>
    <form action="/ideas/{{id}}?_method=DELETE" method="post">
      <input type="hidden" name="_method" value="DELETE">
      <input type="submit" value="Delete" class="btn btn-block btn-danger btn-sm">
    </form>
  </div>
  {{else}}
  <p>No video idea found!</p>
{{/each}}